\newtheoremstyle{thetheoremstyle}%
  {\topsep}%
  {\topsep}%
  {\normalfont}%
  {}%
  {\sffamily\bfseries}%
  {\\}%
  { }%
  {\thmname{#1} \thmnumber{#2} \thmnote{#3}}%
